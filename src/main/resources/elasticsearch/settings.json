{
  "analysis": {
    "filter": {
      "brazilian_stop": {
        "type": "stop",
        "stopwords": "_brazilian_"
      },
      "brazilian_stemmer": {
        "type": "stemmer",
        "language": "brazilian"
      }
    },
    "analyzer": {
      "default": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "brazilian_stop",
          "brazilian_stemmer"
        ]
      }
    }
  },
  "mappings": {
    "servico": {
      "properties": {
        "titulo": {
          "type": "string"
        },
        "descricao": {
          "type": "string"
        }
      }
    }
  }
}