<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level [%thread] %logger{0}: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.integration.file.FileReadingMessageSource" level="TRACE"/>
    <logger name="org.springframework.boot.actuate.audit.listener.AuditListener" level="TRACE"/>
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="TRACE"/>
    <logger name="org.apache.http" level="TRACE"/>
    <logger name="br.gov.servicos" level="TRACE"/>

    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
